{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "MyFullSchematicsSchema",
  "title": "My Full Schematics Schema",
  "type": "object",
  "properties": {
    "prefix": {
      "type": "string",
      "description": "Prefix of module name (Optional) - Example: --prefix=settings-feature-ids",
      "x-prompt": "Enter the module prefix:"
    },
    "path": {
      "type": "string",
      "description": "Example: --path=src/app/nested-html/nested-html-level-2",
      "x-prompt": "Enter the path:"
    },
    "elements": {
      "type": "string",
      "description": "Example: --elements=h1,p",
      "x-prompt": "Enter the path:"
    }
  }
}
